<project name="FtpUpload" default="upload" basedir=".">
  <description>Uploads build results to the server</description>
    
  <target name="upload">
	  <ftp action="delete" server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}" remotedir="repository">
 	    <fileset>
              <include name="**"/>
            </fileset>
          </ftp>

	  <ftp action="rmdir" server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}" remotedir="repository">
 	    <fileset>
              <include name="**"/>
            </fileset>
          </ftp>

	  <ftp action="delete" server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}" remotedir="apidocs">
 	    <fileset>
              <include name="**"/>
            </fileset>
          </ftp>

	  <ftp action="rmdir" server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}" remotedir="apidocs">
 	    <fileset>
              <include name="**"/>
            </fileset>
          </ftp>

	  <ftp server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}">
	    <fileset dir="${circle.artifacts}"/>
	  </ftp>    
  </target>
</project>
